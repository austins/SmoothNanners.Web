@page
@model Error
@{
    var title = ViewData.SetTitle($"Error: {(int)Model.Code}");
}

@section Head {
    <meta name="robots" content="noindex"/>
}

<h2 class="text-4xl font-bold">@title</h2>

<p>@Model.Message</p>

@if (Model.RequestId is not null)
{
    <p class="text-sm">
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </p>
}

<div class="mt-4">
    <a for-route="Routes.Pages.Index.Get()"
       class="rounded-md border border-gray-600 bg-indigo-500 px-3 py-2 hover:bg-indigo-600 motion-safe:transition-colors motion-safe:duration-150 motion-safe:ease-in-out">
        Back to Home
    </a>
</div>
